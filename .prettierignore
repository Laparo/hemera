# Prettier Ignore File
# Ignore build output
.next/
dist/
build/
out/

# Ignore dependencies
node_modules/
.pnp.*

# Ignore generated files
*.generated.*
*.min.js
*.min.css

# Ignore databases and migrations
prisma/migrations/
*.db
*.sqlite

# Ignore logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore cache directories
.cache/
.eslintcache
.tsbuildinfo

# Ignore test reports
test-results/
coverage/
playwright-report/

# Ignore environment files
.env*
!.env.example

# Ignore lock files
package-lock.json
yarn.lock
pnpm-lock.yaml

# Ignore temporary files
.DS_Store
Thumbs.db
*.tmp
*.temp

# Ignore specific file types that shouldn't be formatted
*.svg
*.png
*.jpg
*.jpeg
*.gif
*.ico
*.webp
*.pdf

# Ignore vendor/third-party code
vendor/
public/libs/

# Ignore documentation that should preserve formatting
CHANGELOG.md
LICENSE.md
CODE_OF_CONDUCT.md